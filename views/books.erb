<h3>Welcome <%= current_user.user_name %></h3>

<% if @books.any? %>
	<% @books.each do |book| %>
		<p>
			Title: <%= book.title %>
			<br>
			Author: <%= book.author %>
			<a href="/books/<%= book.id%>">Details</a>
		</p>
	<% end %>
<% else %>
	<p> Not found. </p>
<% end %>

<form action="/add_book">
	<input type="submit" value="Add Book">
</form>

<a class="button" href="/">Back to Homepage</a>
